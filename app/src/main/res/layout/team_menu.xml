<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/teamMenuHeader"
        android:layout_margin="8dp">

        <TextView
            style="@style/teamMenuHeaderTeamName"
            android:text="@string/team_1_colon" />

        <TextView
            android:id="@+id/team_1_choice"
            style="@style/teamMenuHeaderChoice" />
    </LinearLayout>

    <ListView
        android:id="@+id/team_1_list"
        style="@style/teamSelectionMenus" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777" />

    <LinearLayout
        style="@style/teamMenuHeader"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/teamMenuHeaderTeamName"
            android:text="@string/team_2_colon" />

        <TextView
            android:id="@+id/team_2_choice"
            style="@style/teamMenuHeaderChoice" />
    </LinearLayout>

    <ListView
        android:id="@+id/team_2_list"
        style="@style/teamSelectionMenus" />

    <Button
        android:id="@+id/choose_teams_button"
        style="@style/chooseTeamsButton"/>
</LinearLayout>